<Window x:Class="YusufMertBal_HW4.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YusufMertBal_HW4"
        mc:Ignorable="d"
        Title="CourseWindow" Height="450" Width="350" Loaded="Window_Loaded">
    <StackPanel>
        <Label Content="Ders Adı"/>
        <TextBox Name="txtCourseName" Text="" TextWrapping="Wrap"/>
        <Label Content="Ders Kodu"/>
        <TextBox Name="txtCourseCode" Text="" TextWrapping="Wrap"/>
        <Label Content="Kapasitesi"/>
        <TextBox Name="txtCourseCapacity" Text="" TextWrapping="Wrap"/>
        <Label Content="Kredi sayısı"/>
        <TextBox Name="txtCourseCredit" Text="" TextWrapping="Wrap"/>

        <Button Content="Ekle" Name="btnSave" Click="btnSave_Click" Background="LightGreen"/>
        <Button Content="Sil" Name="btnDelete" Click="btnDelete_Click" Background="Red"/>
        <Button Content="Güncelle" Name="btnUpdate" Click="btnUpdate_Click" Background="LightYellow"/>

        <DataGrid Name="dgCourses" Height="311" SelectedCellsChanged="dgCourses_SelectedCellsChanged"/>


    </StackPanel>
</Window>
