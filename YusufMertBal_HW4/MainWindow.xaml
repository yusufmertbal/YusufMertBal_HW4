<Window x:Class="YusufMertBal_HW4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YusufMertBal_HW4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350" Loaded="Window_Loaded">
    <StackPanel Margin="10">
        <Label Content="" Name="lblStudentId"/>
        <Label Content="İsim"/>
        <TextBox Name="txtStudentName" Text="" TextWrapping="Wrap"/>
        <Label Content="Soyad"/>
        <TextBox Name="txtStudentSurname" Text="" TextWrapping="Wrap"/>
        <Label Content="Doğum Yılı"/>
        <DatePicker Name="dtpBirthDate"/>

        <Button Content="Ekle" Name="btnSave" Click="btnSave_Click" Background="LightGreen"/>
        <Button Content="Sil" Name="btnDelete" Click="btnDelete_Click" Background="Red"/>
        <Button Content="Güncelle" Name="btnUpdate" Click="btnUpdate_Click" Background="LightYellow"/>
        <Button Content="Kurs Sayfasını Aç" Name="btnOpenCoursePage" Click="btnOpenCoursePage_Click" Background="AliceBlue"/>

        <DataGrid Name="dgStudents" Height="311" SelectedCellsChanged="dgStudents_SelectedCellsChanged"/>


    </StackPanel>
</Window>
